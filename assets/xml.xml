<root>
	<settings>
		<request_id length="6" />
	</settings>




	<networks>
		<network id="main" url="ws://localhost:9090" />
	</networks>




	<nodes>
		<node id="kuka_a" network_id="main">
			<publish topic="/kuka_a/task_io/goal" />
			<subscribe topic="/kuka_a/task_io/feedback" />
			<status topic="/kuka_a/kuka_io/rsi_interface/status" />
		</node>

		<node id="kuka_b" network_id="main">
			<publish topic="/kuka_b/task_io/goal" />
			<subscribe topic="/kuka_b/task_io/feedback" />
			<status topic="/kuka_b/kuka_io/rsi_interface/status" />
		</node>

		<node id="kuka_effector_a" network_id="main">
			<publish topic="/kuka_a/effector_io/serial_interface/write_to_serial" />
		</node>

		<node id="kuka_effector_b" network_id="main">
			<publish topic="/kuka_a/effector_io/serial_interface/write_to_serial" />
		</node>

		<node id="drone" network_id="main">
			<publish topic="/drone/task_io/goal" />
			<subscribe topic="/drone/task_io/feedback" />
		</node>

		<node id="drone_magnet" network_id="main">
			<publish topic="/drone_magnet/serial_io/write" />
		</node>
	</nodes>




	<task_templates>
		<task_template id="say_hello">
			<task type="text-to-speech" text="Hi {name_1}! How is it going?"/>
			<task type="text-to-speech" text="You can say ok Tatsou! to start giving me speech command"/>
			<task type="text-to-speech" text="Moreover you can use arrow keys to navigate through different tasks"/>
			<task type="text-to-speech" text="in order to define the tasks, open the xml template file comes with package."/>
			<task type="text-to-speech" text="You can define new items in tasks element of this document"/>
		</task_template>
	</task_templates>




	<tasks>
		<task type="play_audio" url="assets/mp3/beep.mp3" wait_for_done="true"/>


		<task type="play_audio" url="assets/mp3/error.mp3" wait_for_done="false"/>

		<task type="play_audio" url="assets/mp3/warning.mp3"/>
		<task type="publish_cmd" node_id="kuka_a" command="984579845" wait_for_done="true" />
		<task type="publish_cmd" node_id="kuka_effector_b" command="on"/>
		<task type="publish_cmd" node_id="kuka_effector_b" command="on" wait_for_done="false"/>
		<task type="sleep" delay_sec="1"/>
		<task type="text-to-speech" text="is magnet on?"/>
		<task type="confirm" on_true="1" on_false="-2" message="is it on?"/>
	</tasks>
</root>
